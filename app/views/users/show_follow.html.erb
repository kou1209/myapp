<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <% if @user.image_name.file.nil? %>
        <%= link_to image_tag("default_user.jpg", size:50), @user %>
      <% else %>
        <%= link_to image_tag(@user.image_name.url, size:50), @user %>
      <% end %>
      <h1><%= link_to @user.name, @user %></h1>
    </section>
  </aside>
  <div class="col-md-8">
    <h3>ありがとうを送ったユーザー</h3>
      <ul class="users follow">
        <% if @users.any? %>
          <div class="user_avatars">
            <% @users.each do |user| %>
              <% if user.image_name.file.nil? %>
                <%= link_to image_tag("default_user.jpg", size:30), user %>
              <% else %>
                <%= link_to image_tag(user.image_name.url, size:30), user %>
              <% end %>
              <%= link_to user.name, user %>
            <% end %>
          </div>
        <% end %>
      </ul>
      <%= will_paginate %>
  </div>
</div>
