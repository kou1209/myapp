<div class="row">
  <p class="col-md-4">
    <div class="user_info thanks_user_info">
      <% if @user.image_name.file.nil? %>
        <%= link_to image_tag("default_user.jpg", size:80), @user %>
      <% else %>
        <%= link_to image_tag(@user.image_name.url, size:80), @user %>
      <% end %>
      <%= link_to @user.name, @user %>にありがとうを送ったユーザー
    </div>
  </p>
  <div class="col-md-8">
      <ul class="users follow">
        <% if @users.any? %>
          <div class="user_avatars">
            <% @users.each do |user| %>
              <br>
              <% if user.image_name.file.nil? %>
                <%= link_to image_tag("default_user.jpg", size:30), user %>
              <% else %>
                <%= link_to image_tag(user.image_name.url, size:30), user %>
              <% end %>
              <%= link_to user.name, user %>
            <% end %>
          </div>
        <% end %>
      </ul>
      <%= will_paginate %>
  </div>
</div>
