<div class="current_user_info">
  <% if current_user.image_name.file.nil? %>
    <%= image_tag "default_user.jpg", size:80 %>
  <% else %>
    <%= image_tag current_user.image_name.url, size:80 %>
  <% end %>
  <h3><%= link_to current_user.name, current_user %></h3>
  <section class="stats">
    <i class="fas fa-heart my-red"></i>
    <%= render 'shared/stats' %>ありがとう
  </section>
</div>
