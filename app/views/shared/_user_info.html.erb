<% if current_user.image_name.file.nil? %>
  <%= image_tag "default_user.jpg", size:50 %>
<% else %>
  <%= image_tag current_user.image_name.url, size:50 %>
<% end %>
<h1><%= link_to current_user.name, current_user %></h1>
<section class="stats">
  <i class="fas fa-heart my-red"></i>
  <%= render 'shared/stats' %>ありがとう
</section>
